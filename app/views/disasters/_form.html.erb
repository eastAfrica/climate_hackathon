  </div>

  <div class="form-group">
    <%= form.label :indirectly_affected %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :relocated %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :integer %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :evacuated %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :losses_usd %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :losses_local %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :damages_crops_hectares %>
    <%= form.text_field :string, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :lost_cattle %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :damages_roads_meters %>
    <%= form.text_field :integer, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :string %>
    <%= form.text_field :string, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if disaster.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', disaster, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if disaster.persisted? %>
      <%= link_to "Cancel", disaster, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", disasters_path, class: "btn btn-link" %>
    <% end %>
  </div>
