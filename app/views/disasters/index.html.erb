


<div class="row">
  <div class="col-sm-6">
    <h1>Disasters</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_disaster_path, class: 'btn btn-primary' do %>
      Add New Disaster
  <% end %>

  <a href="/download_disaster_data.csv"><button class="btn btn-primary">Export to CSV</button></a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>	event	<th/>
            <th>	province_id	<th/>
            <th>	district_id	<th/>
            <th>	sector_id	<th/>
            <th>	date_of_occurence	<th/>
            <th>	location	<th/>
            <th>	deaths	<th/>
            <th>	injured	<th/>
            <th>	missing	<th/>
            <th>	houses_destroyed	<th/>
            <th>	houses_damaged	<th/>
            <th>	directly_affected	<th/>
            <th>	indirectly_affected	<th/>
            <th>	relocated_people	<th/>
            <th>	evacuated_people	<th/>
            <th>	losses_usd	<th/>
            <th>	losses_local	<th/>
            <th>	damages_crops_hectares	<th/>
            <th>	lost_cattle	<th/>
            <th>	damages_roads_meters	<th/>
            <th>	comments	<th/>

          <th></th>



      </tr>
    </thead>

    <tbody>
      <% @disasters.each do |disaster| %>
        <%= content_tag :tr, id: dom_id(disaster), class: dom_class(disaster) do %>
          <td><%=	disaster.event	%><td/>
          <td><%=	disaster.province_id	%><td/>
          <td><%=	disaster.district_id	%><td/>
          <td><%=	disaster.sector_id	%><td/>
          <td><%=	disaster.date_of_occurence	%><td/>
          <td><%=	disaster.location	%><td/>
          <td><%=	disaster.deaths	%><td/>
          <td><%=	disaster.injured	%><td/>
          <td><%=	disaster.missing	%><td/>
          <td><%=	disaster.houses_destroyed	%><td/>
          <td><%=	disaster.houses_damaged	%><td/>
          <td><%=	disaster.directly_affected	%><td/>
          <td><%=	disaster.indirectly_affected	%><td/>
          <td><%=	disaster.relocated_people	%><td/>
          <td><%=	disaster.evacuated_people	%><td/>
          <td><%=	disaster.losses_usd	%><td/>
          <td><%=	disaster.losses_local	%><td/>
          <td><%=	disaster.damages_crops_hectares	%><td/>
          <td><%=	disaster.lost_cattle	%><td/>
          <td><%=	disaster.damages_roads_meters	%><td/>
          <td><%=	disaster.comments	%><td/>
            <td><%= link_to 'Show', disaster %></td>

        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
