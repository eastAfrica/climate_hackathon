<div class="page-header">
  <%= link_to feedbacks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    All Feedbacks
  <% end %>
  <%= link_to edit_feedback_path(@feedback), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show feedback</h1>
</div>

<dl class="dl-horizontal">
  <dt>Caller:</dt>
  <dd><%= @feedback.caller_id %></dd>

  <dt>Audio url:</dt>
  <dd><%= @feedback.audio_url %></dd>
  <td><% complete_url = "https://api.twilio.com/2010-04-01/Accounts/"+
                      ENV["pusher_app_id"]+"/Recordings/"+ @feedback.audio_url+".wav" %>
      <a href="javascript:void(0)" id="playsound" data-no-turbolink="true" >Play Audio feedback</a>

      <audio id="sound_effect" class="audio_player" preload="auto">
          <source src='<%= complete_url %>' type="audio/wav">
      </audio>
      
  </td>

</dl>
