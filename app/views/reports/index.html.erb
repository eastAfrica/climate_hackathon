


<div class="row">
  <div class="col-sm-6">
    <h1>Reports</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_report_path, class: 'btn btn-primary' do %>
    Add New Report
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Weather</th>
            <th>User</th>
            <th>Status</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
        <%= content_tag :tr, id: dom_id(report), class: dom_class(report) do %>
          

                      <td><%= report.weather_id %></td>
                      <td><%= report.user_id %></td>
                      <td><%= report.status %></td>
          
          
            <td><%= link_to 'Show', report %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
