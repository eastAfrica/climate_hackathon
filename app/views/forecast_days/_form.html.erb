<%= form_with(model: forecast_day, local: true) do |form| %>
  <% if forecast_day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(forecast_day.errors.count, "error") %> prohibited this forecast_day from being saved:</h2>

      <ul>
      <% forecast_day.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :day_of_forecast %>
    <%= form.date_select :day_of_forecast, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :early_warning_forecast_id %>
    <%= form.text_field :early_warning_forecast_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if forecast_day.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', forecast_day, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if forecast_day.persisted? %>
      <%= link_to "Cancel", forecast_day, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", forecast_days_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
