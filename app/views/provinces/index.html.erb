<div class="row content-header">
  <div class="col-sm-3">
    <h2>Provinces</h2>
  </div>

  <div class="col-sm-9 action-buttons text-right">
    <%= link_to new_province_path, class: "btn btn-primary add-button" do %>
      <small>   <i class="fa fa-plus"></i> Create Province </small>
    <% end %>
  </div>
</div>

<div class="col-md-9">
  <div class="panel panel-default">
    <div class="panel-header" style="padding-left: 20px">
      <h3>All Provinces</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>

        <tbody>
          <% @provinces.each do |province| %>
            <%= content_tag :tr, id: dom_id(province), class: dom_class(province) do %>
                <td><%= link_to province.name, province %></td>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
